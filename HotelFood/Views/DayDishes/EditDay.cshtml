                var flag = false;
                var dishKind = $("#dishKind").val();
                var dishKindparam = '';
                if (dishKind == parseInt(dishKind, 10)) {
                    dishKindparam = encodeURI(dishKind.toString());
                }
                $.ajax({
                    type: "POST",
                    data: { DishId: dishId, CategoryId: categoryId, DishKindId: dishKindparam, daydate: date, enabled: checked },
                    async: false,
                    url: "/DayDishes/SaveDayDish",
                    success: function (data) {
                        showeditdayalert({ class: 'alert-success', text: checked ? $.text_resource.added : $.text_resource.removed });
                        if (!checked&&data!=-1) {
                            flag= true;
                        }
                    }
                })
                    .fail(function (xhr, status, error) {
                        showeditdayalert({ class: 'alert-danger', text: error });
                        if (!checked) {
                            flag= false;
                        }
                    });
                return flag;
            }
        });

    </script>
